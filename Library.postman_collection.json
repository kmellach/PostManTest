	"item": [
		{
			"name": "AddBook",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const companyCode = pm.globals.get('companyCode');\r",
							"\r",
							"const value = pm.variables.replaceIn('{{$randomInt}}')\r",
							"\r",
							"pm.collectionVariables.set('isbn', companyCode+value)\r",
							"\r",
							"pm.collectionVariables.set('book_name', pm.iterationData.get('Books Name'))\r",
							"pm.collectionVariables.set('author_name', pm.iterationData.get('Author'))"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"var request = JSON.parse(pm.request.body.raw);\r",
							"pm.collectionVariables.set('flag', false);\r",
							"pm.collectionVariables.set('book_name', request.name);\r",
							"console.log('Book name is' + pm.collectionVariables.get('book_name'))\r",
							"\r",
							"\r",
							"function generateBookId() {\r",
							"    const expected_id = request.isbn + request.aisle;\r",
							"    return expected_id;\r",
							"}\r",
							"\r",
							"function cleanUpScript() {\r",
							"    const book_id = generateBookId();\r",
							"    pm.environment.set('book_id', book_id);\r",
							"    pm.collectionVariables.set('flag', true);\r",
							"    pm.execution.setNextRequest('DeleteBook');\r",
							"}\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.expect(pm.response.code).to.equal(200);\r",
							"});\r",
							"\r",
							"pm.test('Response body should not be empty when status code is 200', function () {\r",
							"    const jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.not.be.empty;\r",
							"});\r",
							"\r",
							"pm.test('Keys should be Msg and ID', function () {\r",
							"    const jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.have.all.keys('Msg', 'ID');\r",
							"});\r",
							"\r",
							"pm.test('Header cookie response validations', function () {\r",
							"    pm.response.to.have.header('Content-Type');\r",
							"    pm.expect(pm.response.headers.get('Content-Type')).to.eql('application/json;charset=UTF-8');\r",
							"});\r",
							"\r",
							"pm.test('Response Time', function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);\r",
							"});\r",
							"\r",
							"pm.test('Verify text present in response', function () {\r",
							"    try {\r",
							"        pm.expect(pm.response.text()).to.contain('added');\r",
							"    } catch (err) {\r",
							"        if (pm.response.json().Msg === 'Book Already Exists') {\r",
							"            cleanUpScript();\r",
							"        } else {\r",
							"            throw err;\r",
							"        }\r",
							"    }\r",
							"});\r",
							"\r",
							"pm.environment.set(\"ID\", pm.response.json().ID);\r",
							"pm.test('Functional validation of ID logic which is a combination of ISBN and aisle', function () {\r",
							"    const reqBody = JSON.parse(pm.request.body.raw);\r",
							"    const aisle = reqBody.aisle;\r",
							"\r",
							"    const isbn = pm.collectionVariables.get('isbn') || ''; // Ensure isbn is defined\r",
							"    const fullValue = isbn + aisle;\r",
							"\r",
							"    pm.collectionVariables.set('ID', fullValue);\r",
							"    console.log('Generated ID:', fullValue);\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n\"name\":\"Postman basics\",\r\n\"isbn\":\"{{isbn}}\",\r\n\"aisle\":\"186\",\r\n\"author\":\"{{author_name}}\"\r\n}\r\n",
