							"        \"isbn\",",
							"        \"aisle\",",
							"        \"author\"",
							"      ]",
							"    }",
							"  ]",
							"}",
							"",
							"",
							"pm.test(\"Status code is 200\", function() {",
							"    pm.expect(pm.response.code).to.equal(200);",
							"});",
							"",
							"pm.test(\"Check for properties\", function() {",
							"    pm.expect(jsonData).to.be.an('array').that.is.not.empty;",
							"    jsonData.forEach(book => {",
							"        pm.expect(book).to.have.all.keys('book_name', 'isbn', 'aisle', 'author');",
							"    });",
							"});",
							"",
							"pm.test(\"Validate bookname\", function(){",
							"    pm.expect(jsonData[0].book_name).to.eql(pm.collectionVariables.get('book_name'));",
							"});",
							"",
							"pm.test('Response Time', function(){",
							"    pm.expect(pm.response.responseTime).to.be.below(1200)",
							"});",
							"",
							"pm.test('Validate Schema', function(){",
							"    pm.expect(pm.response).to.have.jsonSchema(schema)",
